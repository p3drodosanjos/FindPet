@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="/css/TelaPublicacaocss.css">
</head>
<body>
    <!-- Barra superior fixa -->
    <div class="hot-bar">
        <div class="left-side">
            <img src="/imagem/logo_find_pet.webp" alt="Logo" class="hot-bar-logo">
            <div class="find-pet">Find Pet</div>
        </div>
        <div class="right-side">
            <div class="hot-bar-item"><a href="#">Sobre nós</a></div>
            <div class="hot-bar-item"><a href="#">Redes Sociais</a></div>
            <div class="hot-bar-item login"><a href="#">Login</a></div>
        </div>
    </div>

    <!-- Contêiner do formulário -->
    <div class="form-container">
        <form method="post" action="/TelaPublicacao/Create" enctype="multipart/form-data">
            <h2>Informações do Pet Desaparecido</h2>
            <div class="form-grid">
                <!-- Campos do formulário -->
                <div class="form-group">
                    <label for="nome">Nome do Pet:</label>
                    <input type="text" id="nome" name="Nome" required>
                </div>
                <div class="form-group">
                    <label for="raca">Raça:</label>
                    <input type="text" id="raca" name="Raca" required>
                </div>
                <div class="form-group">
                    <label for="cor">Cor:</label>
                    <input type="text" id="cor" name="Cor" required>
                </div>
                <div class="form-group">
                    <label for="porte">Porte:</label>
                    <input type="text" id="porte" name="Porte" required>
                </div>
                <div class="form-group">
                    <label for="local">Local do Desaparecimento:</label>
                    <input type="text" id="local" name="LocalDesaparecimento" required>
                </div>
                <div class="form-group">
                    <label for="data">Data do Desaparecimento:</label>
                    <input type="date" id="data" name="DataDesaparecimento" required>
                </div>
                <div class="form-group">
                    <label for="chip">Nº Chip:</label>
                    <input type="text" id="chip" name="Chip" required>
                </div>
                <div class="form-group">
                    <label for="legenda">Legenda:</label>
                    <textarea id="legenda" name="Legenda" rows="3"></textarea>
                </div>
            </div>

            <!-- Campo para upload de imagem -->
            <div class="image-upload">
                <label for="image">Escolher imagem:</label>
                <input type="file" id="image" name="Image" accept="image/*" onchange="previewImage(event)">
                <br>
                <!-- Imagem escolhida será exibida aqui -->
                <img id="image-preview" src="" alt="Imagem escolhida" style="display: none; max-width: 100%; margin-top: 20px;">
            </div>

            <!-- Botão de submissão -->
            <button type="submit">Publicar</button>
        </form>
    </div>

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function() {
                const imagePreview = document.getElementById('image-preview');
                imagePreview.src = reader.result;
                imagePreview.style.display = 'block'; // Exibe a imagem
            }
            if (file) {
                reader.readAsDataURL(file); // Converte a imagem para base64
            }
        }
    </script>
</body>
</html>
