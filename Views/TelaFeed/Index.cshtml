@using findPet.Models
@model TelaPublicacaoFeed

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="/css/TelaFeedcss.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <main>
        <div class="hot-bar">

            <div class="left-side">
                <img src="/imagem/logo_find_pet.webp" alt="Logo" class="hot-bar-logo">
                <div class="find-pet">Find Pet</div>
            </div>

            <div class="search-container">
                <input type="text" class="search-input" placeholder="Pesquisar...">
                <button class="search-button">🔍</button>
            </div>


            <div class="right-side">
                <div class="hot-bar-item"><i class="bi bi-chat" style="font-size:30px"></i></div>
                <div class="hot-bar-item"><i class="bi bi-bell" style="font-size:30px"></i></div>
                <div class="hot-bar-item login"><i class="bi bi-person-circle" style="font-size:30px"></i></div>
            </div>
        </div>

        <div class="botao">

            <button class="iniciar-publicacao" onclick="location.href='TelaPublicacao';">Iniciar Publicação</button>
        </div>
        <h3>@Model.Nome</h3>
        <div class="container">
            
            <div class="itens">
                @if (Model.ImageFileName != null)
                {
                    <img src="/Imagem/@Model.ImageFileName" alt="publicacaoImagem">
                }
            </div>
            <div class="icones-abaixo">
                <div class="item-pub"><i class="fa-solid fa-paw"></i></div>
                <div class="item-pub"><i class="fa-solid fa-comment"></i></div>
                <div class="item-pub"><i class="fa-solid fa-rotate-right"></i></div>
            </div>
        </div>

        <!-- Div para os ícones abaixo do container -->
        




    </main>
</body>
</html>

