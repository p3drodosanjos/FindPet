@using findPet.Models
@model TelaPublicacaoModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicação</title>
    <link rel="stylesheet" href="/css/TelaPublicacaocss.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


</head>
<body>
    <!-- Hot Bar - Barra superior -->
    <div class="hot-bar">
        <div class="left-side">
            <img src="/imagem/logo_find_pet.webp" alt="Logo" class="hot-bar-logo">
            <div class="find-pet">Find Pet</div>
        </div>
        <div class="right-side">
            <div class="hot-bar-item login" onclick="location.href='TelaFeed';"><a>Início</a></div>
        </div>
    </div>

    <div class="form-container">

        <!-- Div principal que cont�m o formul�rio e o upload de imagem -->
        <div class="form-content">
            <form method="post" action="/TelaPublicacao/Create" enctype="multipart/form-data">
                <!-- Receptor de Imagem -->
                <div class="image-upload">
                    <p>Imagem do Pet</p>
                    <label for="imagem" class="upload-icon">
                        <i class="fa-solid fa-upload"></i>
                    </label>
                    <input type="file" id="imagem" name="imagem" accept="image/*" hidden>
                    <div class="image-preview" id="imagePreview">
                
                        <!-- A pré-visualização será exibida aqui -->
                    </div>
                </div>



            <!-- Formul�rio de Cadastro -->
                <div class="titulo-pet">
                    <h2>Publique sobre seu pet perdido<h2>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="nome">Nome do Pet:</label>
                        <input type="text" id="nome" name="Nome" placeholder="Digite o nome do pet" required>
                    </div>
                    <div class="form-group">
                        <label for="raca">Raça:</label>
                        <input type="text" id="raca" name="Raca" placeholder="Digite a raça do pet" required>
                    </div>
                    <div class="form-group">
                        <label for="cor">Cor:</label>
                        <input type="text" id="cor" name="Cor" placeholder="Digite a cor do pet" required>
                    </div>
                    <div class="form-group">
                        <label for="porte">Porte:</label>
                        <input type="text" id="porte" name="Porte" placeholder="Digite o porte do pet" required>
                    </div>
                    <div class="form-group">
                        <label for="local">Local do Desaparecimento:</label>
                        <input type="text" id="local" name="LocalDesaparecimento" placeholder="Digite o local do desaparecimento" required>
                    </div>
                    <div class="form-group">
                        <label for="data">Data do Desaparecimento:</label>
                        <input type="date" id="data" name="DataDesaparecimento" required>
                    </div>
                    <div class="form-group">
                        <label for="chip">Nº Chip:</label>
                        <input type="text" id="chip" name="Chip" placeholder="Digite o nº do chip" required>
                    </div>
                    <div class="form-group">
                        <label for="legenda">Legenda:</label>
                        <textarea id="legenda" name="Legenda" placeholder="Legenda da publicação"></textarea>
                    </div>
                </div>
                <button type="submit">Publicar</button>
            </form>
        </div>
    </div>
</body>
</html>
